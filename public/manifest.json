{
  "manifest_version": 3,
  "name": "Smart Compose",
  "version": "0.1.0",
  "description": "AI-powered text assistant (Proofreader, Rewriter, Summarizer, Translator)",
  "permissions": ["storage", "activeTab", "scripting", "notifications"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
