{
  "manifest_version": 3,
  "name": "InterviewCoach.AI",
  "version": "1.0.0",
  "description": "AI-powered interview preparation assistant with job description analysis and question generation",
  "permissions": ["storage", "activeTab", "scripting", "notifications", "contextMenus"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
