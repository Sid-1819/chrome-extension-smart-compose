{
  "manifest_version": 3,
  "name": "InterviewCoach AI",
  "version": "1.2.0",
  "description": "AI-powered interview preparation assistant with job description analysis and question generation",
  "permissions": ["storage", "contextMenus", "sidePanel", "scripting", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/IA-light-48.jpg",
    "128": "icons/IA-light-128.jpg"
  },
  "action": {
    "default_icon": {
      "48": "icons/IA-light-48.jpg",
      "128": "icons/IA-light-128.jpg"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*","mic-permission.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
